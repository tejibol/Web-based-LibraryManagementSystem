@model List<BorrowRequestViewModel>
@{
    ViewData["Title"] = "Pending Book Requests";
}

@section Styles {
    <style>
        body {
            padding-top: 60px; /* para di matakpan ng fixed navbar */
            margin-left: 220px;
        }

        .user-management-container {
            padding: 2rem;
            background-color: #f8f9fa;
            min-height: 100vh;
        }

        .management-header {
            background: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            margin-bottom: 2rem;
            animation: slideDown 0.5s ease;
        }

        .users-table {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            animation: fadeIn 0.8s ease;
        }

        .table thead {
            background: linear-gradient(45deg, #2c3e50, #3498db);
            color: white;
        }

        .table th {
            border: none;
            padding: 1rem;
            font-weight: 500;
        }

        .table td {
            padding: 1rem;
            vertical-align: middle;
            transition: all 0.3s ease;
        }

        .table tr:hover td {
            background: rgba(52, 152, 219, 0.05);
            transform: translateX(5px);
        }

        .action-buttons .btn {
            padding: 0.4rem 0.8rem;
            margin: 0 3px;
            transition: all 0.3s ease;
            border-radius: 8px;
        }

        .btn-approve:hover {
            background: #2ecc71;
            color: white;
        }

        .btn-reject:hover {
            background: #e74c3c;
            color: white;
        }

        @@keyframes slideDown {
            from {
                transform: translateY(-20px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }
    </style>
}

<div class="user-management-container">
    <div class="management-header">
        <h1 class="display-6 mb-3">Pending Book Requests</h1>
        <p class="text-muted">Approve or reject pending borrowing requests</p>
    </div>

    <div class="users-table">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Book</th>
                    <th>Borrower</th>
                    <th>Request Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var req in Model)
                    {
                        <tr>
                            <td>@req.BookTitle</td>
                            <td>
                                <a asp-controller="Librarian" asp-action="ViewProfile" asp-route-id="@req.UserId" class="text-decoration-none">
                                    @req.BorrowerName
                                </a>
                            </td>
                            <td>@req.RequestDate.ToString("MMM dd, yyyy")</td>
                            <td class="action-buttons">
                                <form method="post" asp-action="UpdateRequestStatus" asp-route-id="@req.RequestID" class="d-inline">
                                    <button name="status" value="Approved" class="btn btn-success btn-sm btn-approve">
                                        <i class="fas fa-check"></i>
                                    </button>
                                    <button name="status" value="Rejected" class="btn btn-danger btn-sm btn-reject">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-4 text-muted">
                            <i class="fas fa-hourglass-half fa-2x mb-3"></i>
                            <div>No pending requests</div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}